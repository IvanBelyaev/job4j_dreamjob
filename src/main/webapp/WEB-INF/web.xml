  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteImageServlet</servlet-name>
    <url-pattern>/deleteImage.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteCandidateServlet</servlet-name>
